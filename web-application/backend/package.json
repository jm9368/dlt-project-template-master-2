{
  "name": "backend",
  "version": "0.0.1",
  "description": "Backend Server",
  "main": "index.js",
  "scripts": {
    "watch": "npm run watch:ts",
    "watch:ts": "npm run build:ts -- --watch --diagnostics",
    "prebuild": "npm run lint",
    "compile": "tsc --pretty",
    "build": "npm run server-build",
    "server-build": "rimraf dist && tsc --pretty",
    "lint": "eslint --fix src/**/*.ts",
    "setup-mongo": "node dist/setup-mongo.js",
    "update-locales": "npm run update-translations",
    "update-translations": "node scripts/translate-file-maker.js",
    "update-db-scripts": "node scripts/gen-db-scripts.js",
    "reset-blockchain-sync": "node dist/reset-blockchain-sync.js",
    "update-api-bindings": "node scripts/gen-api-bindings.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/index.ts\"",
    "start": "node dist/index.js",
    "unit-tests": "mocha --bail --exit --recursive --timeout 60000 -r ts-node/register 'test/mocha/function-tests/*.ts'",
    "api-tests": "mocha --bail --exit --recursive --timeout 60000 -r ts-node/register 'test/mocha/api-tests/*.ts'",
    "test": "npm run unit-tests && npm run api-tests"
  },
  "dependencies": {
    "@asanrom/async-tools": "1.1.1",
    "@asanrom/express-swagger-generator": "2.1.5",
    "@asanrom/javascript-object-sanitizer": "1.0.0",
    "@asanrom/smart-contract-wrapper": "5.0.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "decimal.js": "10.4.3",
    "dotenv": "16.3.1",
    "ethereum-cryptography": "2.1.2",
    "express": "4.21.1",
    "express-async-errors": "3.1.1",
    "express-fileupload": "1.4.0",
    "express-useragent": "1.0.15",
    "ffprobe": "1.1.2",
    "form-data": "4.0.0",
    "i18n": "0.15.1",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.2",
    "lru-cache": "10.0.1",
    "md5-file": "5.0.0",
    "mime-types": "2.1.35",
    "nodemailer": "6.9.9",
    "rimraf": "5.0.1",
    "speakeasy": "2.0.0",
    "tsbean-driver-mongo": "3.0.3",
    "tsbean-driver-mysql": "2.0.6",
    "tsbean-driver-postgres": "2.0.2",
    "tsbean-orm": "2.0.2",
    "winston": "3.11.0",
    "winston-elasticsearch": "0.19.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@asanrom/request-axios": "1.0.4",
    "@types/chai": "4.3.6",
    "@types/cookie-parser": "1.4.4",
    "@types/express": "4.17.17",
    "@types/express-fileupload": "1.4.1",
    "@types/express-useragent": "1.0.2",
    "@types/express-ws": "3.0.1",
    "@types/ffprobe": "1.1.8",
    "@types/i18n": "0.13.6",
    "@types/ioredis": "4.28.10",
    "@types/jsonwebtoken": "9.0.2",
    "@types/mime-types": "2.1.4",
    "@types/mocha": "10.0.1",
    "@types/node": "20.6.0",
    "@types/nodemailer": "6.4.10",
    "@types/rimraf": "3.0.2",
    "@types/speakeasy": "2.0.7",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "chai": "4.3.8",
    "eslint": "8.49.0",
    "ignore": "5.2.4",
    "mocha": "10.2.0",
    "nodemon": "3.0.2",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "author": "",
  "engines": {
    "node": ">= 20.0.0"
  },
